        <Button x:Name="btnTorles" Content="Törlés" HorizontalAlignment="Left" Margin="580,182,0,0" VerticalAlignment="Top" Click="btnTorles_Click"/>
        <ListBox x:Name="lbBal"  Margin="308,283,336,31" SelectionMode="Extended"/>
